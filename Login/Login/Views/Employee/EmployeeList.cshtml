@model List<Employee> 
<div class="container">
    <div class="row my-3">
        <div class="col-10 text-danger"><h1>Employee List</h1></div>
        <div class="col-2 text-end"><a class="btn btn-secondary" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-arrow-left"></i> Back</a></div>
    <hr />
    </div>

    @if(Model.Count>0){
        <table class="table table-bordered table-striped text-center">
            <thead >
                <tr>
                   <th>Id</th>
                     <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                 
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeId</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Role</td>
                    <td>
                        <a asp-controller="Employee" asp-action="EmployeeView" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="bi bi-patch-exclamation"></i></a>
                        <a asp-controller="Employee" asp-action="EmployeeEdit" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Employee" asp-action="EmployeeDelete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
              
        </table>
    }
    else
    {
        <div class="fs-4 text-center">No Employee Records Available</div>
    }
</div>
