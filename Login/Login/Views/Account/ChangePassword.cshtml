@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Change Password";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-primary">Change Password</h2>
                <hr>

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-lock-fill"></i> Current Password:</label>
                        <input type="password" name="Oldpassword" class=" password form-control" required placeholder="Enter current password" />
                    </div>

                    <div class="mb-3 ">
                        <label class="form-label"><i class="bi bi-key-fill"></i> New Password:</label>
                        <input type="password" name="newpassword" class="password form-control" required placeholder="Enter new password" />
                    </div>
                    <div class="mb-3 ">
                        <label class="form-label"><i class="bi bi-key-fill"></i> Conform Password:</label>
                        <div class="input-group">
                            <input type="password" name="confrompassword" class="password form-control" required placeholder="Enter Conform password" />
                            <a class="btn btn-outline-secondary" onclick="view()"> <i class="bi bi-eye"></i></a>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-arrow-right-circle"></i> Change Password
                    </button>
                </form>

                <!-- Success and Error Messages -->
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3 text-center">
                        <i class="bi bi-check-circle"></i> @ViewBag.Message
                    </div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>

    function view()
    {     pass=document.getElementsByClassName("password");
    Array.from(pass).forEach(field => {
        field.type="text";
        setTimeout(function()
            {
                field.type="password";
        },2000)

    }
    )}
</script>